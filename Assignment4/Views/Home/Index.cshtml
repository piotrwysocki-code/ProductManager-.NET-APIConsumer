@model IEnumerable<Product>

@{Layout = "_Layout";
    ViewBag.Title = "All Products";}

<h2> All Products </h2>

<a asp-action="AddProduct" class="btn btn-sm btn-primary">Add New Product</a>
<a asp-action="GetProduct" class="btn btn-sm btn-primary">Get Product</a>
<table class="table table-sm table-stripped table-borderd m-2">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>ProductName</th>
            <th>Price</th>
            <th>Category ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>$@item.Price</td>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="UpdateProduct" asp-route-id="@item.ProductId">
                        Update
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteProduct" method="post">
                        <input type="hidden" value="@item.ProductId" name="ProductID" />
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>