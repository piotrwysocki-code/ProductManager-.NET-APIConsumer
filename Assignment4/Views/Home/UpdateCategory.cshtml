@model Category


@{Layout = "_Layout";
    ViewBag.Title = "Update Category";}
<h2> Update Category </h2>
<a asp-action="CategoryList" class="btn btn-sm btn-primary">Go Back</a>

<form method="post" asp-action="UpdateCategory">
    <div class="form-group">
        <label asp-for="CategoryId">CategoryID: </label>
        <input class="form-control" asp-for="CategoryId" readonly />
    </div>

    <div class="form-group">
        <label asp-for="CategoryName">Category Name: </label>
        <input class="form-control" asp-for="CategoryName" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-primary">Update Category</button>
    </div>
</form>


@if (ViewBag.Result == "Success")
{
<h2> Category </h2>
    <table class="table table-sm table-stripped table-borderd m-2">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CategoryId</td>
                <td>@Model.CategoryName</td>
            </tr>
        </tbody>
    </table>
}