@model Category

@{Layout = "_Layout";
    ViewBag.Title = "Add A New Category";
}

<h2>Add A New Category</h2>
<a asp-action="CategoryList" class="btn btnsmall btn-primary">Go Back</a>
<h3>@ViewBag.StatusCode</h3>

<form asp-action="AddCategory" method="post">
    <div class="form-group">
        <label for="CategoryId">Category ID: </label>
        <input class="form-control" name="CategoryId" />
    </div>

    <div class="form-group">
        <label for="CategoryName">Category Name: </label>
        <input class="form-control" name="CategoryName" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-primary">Add Category</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Your New Category</h2>
    <table class="table table-bordered table-striped m-2">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>@Model.CategoryId</td>
                <td>@Model.CategoryName</td>
            </tr>

        </tbody>
    </table>
}