@model Product


@{Layout = "_Layout";
    ViewBag.Title = "Products";}
<h2> Product Details </h2>
<a asp-action="CategoryList" class="btn btn-sm btn-primary">Go Back</a>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Enter the ID you want to search for:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Search</button>
    </div>
</form>


@if (Model != null)
{
<h2> Product </h2>
    <table class="table table-sm table-stripped table-borderd m-2">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>CategoryId</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ProductId</td>
                <td>@Model.ProductName</td>
                <td>@Model.Price</td>
                <td>@Model.CategoryId</td>

            </tr>
        </tbody>
    </table>
}