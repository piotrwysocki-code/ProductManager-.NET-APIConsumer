@model Product


@{Layout = "_Layout";
    ViewBag.Title = "Update Product";}
<h2> Update Product </h2>
<a asp-action="ProductList" class="btn btn-sm btn-primary">Go Back</a>

<form method="post" asp-action="UpdateProduct">
    <div class="form-group">
        <label asp-for="ProductId">Product ID: </label>
        <input class="form-control" asp-for="ProductId" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ProductName">Product Name: </label>
        <input class="form-control" asp-for="ProductName" />
    </div>

    <div class="form-group">
        <label asp-for="Price">Price: </label>
        <input class="form-control" asp-for="Price" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category ID: </label>
        <input class="form-control" asp-for="CategoryId" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-primary">Update Product</button>
    </div>
</form>


@if (ViewBag.Result == "Success")
{
<h2> Product </h2>
    <table class="table table-sm table-stripped table-borderd m-2">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>CategoryId</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ProductId</td>
                <td>@Model.ProductName</td>
                <td>@Model.Price</td>
                <td>@Model.CategoryId</td>
            </tr>
        </tbody>
    </table>
}